<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Tile" parent="android:Widget">
        <item name="android:background">@drawable/toggle_tile</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ToggleTile" parent="Tile">
        <item name="android:backgroundTint">@color/tile_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:textColor">@color/tile_content_color</item>
        <item name="drawableTint">@color/tile_content_color</item>
    </style>

    <style name="ActionTile" parent="Tile">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="drawableTint">?colorOnPrimary</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?colorSecondary</item>
    </style>
</resources>