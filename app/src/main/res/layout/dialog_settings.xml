<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ToggleButton
        android:id="@+id/app_theme_tile"
        style="@style/ToggleTile"
        android:drawableStart="@drawable/ic_night_theme"
        android:text="@string/darktheme" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/donate_tile"
        style="@style/ActionTile"
        android:drawableStart="@drawable/ic_donate"
        android:text="@string/donate" />

    <ToggleButton
        android:id="@+id/proxy_tile"
        style="@style/ToggleTile"
        android:drawableStart="@drawable/ic_proxy"
        android:text="@string/proxy" />

    <FrameLayout
        android:id="@+id/placeholder"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="app_theme_tile,donate_tile,proxy_tile,placeholder"
        app:flow_horizontalGap="8dp"
        app:flow_maxElementsWrap="2"
        app:flow_verticalGap="8dp"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>